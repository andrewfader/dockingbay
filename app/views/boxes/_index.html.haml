%table
  %thead
    %tr
      %th Name
      - unless user
        %th User Name
      %th Created
      %th Status
      %th Ports
      %th Logs
  %tbody
    - @boxes.each do |b|
      %tr
        %td=b.name
        - unless user
          %td=b.user.try(:login)
        %td=b.created_at
        %td=b.status
        %td=b.ports
        %td=link_to b.container.data.data.present? ? b.container.data.data.length : "Click to generate then come back later", container_path(b.container.id)
